<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    helpPath="en/cq/current/wcm/default_components.html#Title"
    title="Responsive Row"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <cols
            jcr:primaryType="cq:Widget"
            title="Columns"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <arguments
                    jcr:primaryType="cq:Widget"
                    collapsed="{Boolean}false"
                    collapsible="{Boolean}false"
                    title="Columns"
                    xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <participants
                            jcr:primaryType="cq:Widget"
                            fieldDescription="A list of columns to include in this row, format 'span' or 'span:offset' integers."
                            fieldLabel="Span:Offset"
                            name="./columns"
                            xtype="multifield">
                            <fieldConfig
                                jcr:primaryType="nt:unstructured"
                                width="50"
                                xtype="textfield"/>
                        </participants>
                    </items>
                </arguments>
            </items>
        </cols>
        <styles
            jcr:primaryType="cq:Widget"
            title="Styling"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <cssclass
                    jcr:primaryType="nt:unstructured"
                    allowBlank="true"
                    fieldDescription="Additional CSS classes to apply to element"
                    fieldLabel="CSS Class"
                    name="./cssClass"
                    validateOnBlur="true"
                    xtype="textfield"/>
                <cssstyle
                    jcr:primaryType="nt:unstructured"
                    allowBlank="true"
                    fieldDescription="Additional CSS style string to apply to element"
                    fieldLabel="CSS Style"
                    name="./cssStyle"
                    validateOnBlur="true"
                    xtype="textfield"/>
            </items>
        </styles>
    </items>
</jcr:root>
